<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <Button
                    android:text="@string/open_access_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/open_access_settings"
                    android:onClick="onOpenAccessSettings"/>
            <Button
                    android:text="@string/send_test_notification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/send_test_notification"
                    android:onClick="onSendTestNotification"/>
            <Button
                    android:text="Temporary Open Edit Matcher Data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/open_edit"
                    android:onClick="onOpenEditMatcherData"/>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>